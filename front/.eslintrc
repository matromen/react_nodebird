{
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        // "es6": true
    },
    "extends": [
        "eslint: recommended",
        "plugin: react/recommended"
        // "airbnb"
    ],
    "plugins": [
        "import",
        "react-hooks"
    ],
    "rules": {
        "no-underscore-dangle": "off",
        "react/forbid-prop-types" : 0,
        "indent": 0,
        "spaced-comment": 0,
        "react/jsx-filename-extension": 0,
        "no-trailing-spaces": 0,
        "react/jsx-indent": 0,
        "no-lone-blocks": 0,
        "jsx-quotes": 0,
        "linebreak-style": 0,
        "operator-linebreak": 0,
        "no-undef": 0,
        "react/jsx-one-expression-per-line": 0,
        "brace-style": 0,
        "max-len": 0,
        "no-multiple-empty-lines": 0,
        "jsx-a11y/anchor-is-valid": 0,
        "space-before-blocks" : 0
    }
}